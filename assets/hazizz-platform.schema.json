{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Hazizz platform",
  "description": "All the sources from the platform!",
  "type": "object",
  "properties": {
    "DetailedUserInformation": {
      "required": [
        "disabled",
        "emailAddress",
        "expired",
        "id",
        "lastUpdated",
        "locked",
        "registrationDate",
        "username"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "emailAddress": {
          "type": "string"
        },
        "googleEmailAddress": {
          "type": "string"
        },
        "facebookId": {
          "type": "integer",
          "format": "int64"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "registrationDate": {
          "type": "string",
          "format": "date"
        },
        "locked": {
          "type": "boolean"
        },
        "disabled": {
          "type": "boolean"
        },
        "expired": {
          "type": "boolean"
        }
      }
    },
    "FacebookUserCreationRequest": {
      "required": [
        "consent",
        "facebookToken"
      ],
      "type": "object",
      "properties": {
        "facebookToken": {
          "type": "string"
        },
        "consent": {
          "type": "boolean"
        }
      }
    },
    "UserInformation": {
      "required": [
        "permissions",
        "userId",
        "username"
      ],
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "permissions": {
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "AuthenticationRequest": {
      "required": [
        "username"
      ],
      "type": "object",
      "properties": {
        "username": {
          "pattern": "^[@.a-zA-Z0-9_-]*$",
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "authToken": {
          "type": "string"
        },
        "openIdToken": {
          "type": "string"
        }
      }
    },
    "GoogleUserCreationRequest": {
      "required": [
        "consent",
        "openIdToken"
      ],
      "type": "object",
      "properties": {
        "openIdToken": {
          "type": "string"
        },
        "consent": {
          "type": "boolean"
        }
      }
    },
    "PasswordUpdateRequest": {
      "required": [
        "password"
      ],
      "type": "object",
      "properties": {
        "password": {
          "maxLength": 65,
          "minLength": 8,
          "type": "string",
          "description": "Value will be trimmed"
        }
      }
    },
    "AuthTokenResponse": {
      "required": [
        "expires_in",
        "refresh",
        "token"
      ],
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "refresh": {
          "type": "string"
        },
        "scopes": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "expires_in": {
          "type": "integer",
          "format": "int64"
        },
        "access_token": {
          "type": "string"
        },
        "refresh_token": {
          "type": "string"
        }
      }
    },
    "TokenSessionData": {
      "required": [
        "clientId",
        "creationTimestamp",
        "id",
        "lastRefreshed",
        "lastUsed"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "clientId": {
          "type": "string"
        },
        "creationTimestamp": {
          "type": "string",
          "format": "date-time"
        },
        "lastUsed": {
          "type": "string",
          "format": "date-time"
        },
        "lastRefreshed": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "PublicEventLog": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "type": {
          "type": "string",
          "enum": [
            "EventType{task created}",
            "EventType{task removed}",
            "EventType{task updated}",
            "EventType{announcement created}",
            "EventType{announcement removed}",
            "EventType{announcement updated}",
            "EventType{group created}",
            "EventType{group updated}",
            "EventType{group deleted}",
            "EventType{user created}",
            "EventType{user updated}",
            "EventType{user deleted}",
            "EventType{subject created}",
            "EventType{subject updated}",
            "EventType{subject deleted}",
            "EventType{comment created}",
            "EventType{response created}",
            "EventType{comment updated}",
            "EventType{comment deleted}",
            "EventType{user joined group}",
            "EventType{user left group}"
          ]
        },
        "performer": {
          "type": "integer",
          "format": "int64"
        },
        "notified": {
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "integer",
            "format": "int64"
          }
        },
        "data": {
          "type": "string"
        }
      }
    },
    "PublicCommentData": {
      "required": [
        "children",
        "content",
        "creationDate",
        "creator",
        "hiddenChildren",
        "id"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "content": {
          "type": "string"
        },
        "creator": {
          "$ref": "#/properties/PublicUserData"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/properties/PublicCommentData"
          }
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "hiddenChildren": {
          "type": "boolean"
        }
      }
    },
    "PublicUserData": {
      "required": [
        "displayName",
        "id",
        "username"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        }
      }
    },
    "CommentCreationRequest": {
      "required": [
        "content"
      ],
      "type": "object",
      "properties": {
        "content": {
          "maxLength": 300,
          "minLength": 1,
          "type": "string"
        }
      }
    },
    "PrivateCommentData": {
      "required": [
        "children",
        "content",
        "creationDate",
        "creator",
        "hiddenChildren",
        "id"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "content": {
          "type": "string"
        },
        "creator": {
          "$ref": "#/properties/PublicUserData"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/properties/PublicCommentData"
          }
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "hiddenChildren": {
          "type": "boolean"
        },
        "task": {
          "$ref": "#/properties/PrivateTaskData"
        }
      }
    },
    "PrivateTaskData": {
      "required": [
        "assignation",
        "creationDate",
        "creator",
        "description",
        "id",
        "lastUpdated",
        "tags"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "assignation": {
          "type": "string",
          "enum": [
            "GROUP",
            "SUBJECT",
            "USER",
            "THERA"
          ]
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "salt": {
          "type": "string"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "creator": {
          "$ref": "#/properties/PublicUserData"
        },
        "group": {
          "$ref": "#/properties/PublicGroupData"
        },
        "subject": {
          "$ref": "#/properties/PublicSubjectData"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "completed": {
          "type": "boolean"
        },
        "permission": {
          "type": "string",
          "enum": [
            "OWNER",
            "MODERATOR",
            "USER",
            "NULL"
          ]
        }
      }
    },
    "PublicGroupData": {
      "required": [
        "groupType",
        "id",
        "name",
        "userCount"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "groupType": {
          "type": "string",
          "enum": [
            "OPEN",
            "CLOSED"
          ]
        },
        "userCount": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "PublicSubjectData": {
      "required": [
        "id",
        "name",
        "subscribed",
        "subscriberOnly"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "subscriberOnly": {
          "type": "boolean"
        },
        "manager": {
          "$ref": "#/properties/PublicUserData"
        },
        "subscribed": {
          "type": "boolean"
        }
      }
    },
    "PublicTaskData": {
      "required": [
        "assignation",
        "creator",
        "description",
        "dueDate",
        "group",
        "id",
        "subject",
        "tags"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "assignation": {
          "type": "string",
          "enum": [
            "GROUP",
            "SUBJECT",
            "USER",
            "THERA"
          ]
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "salt": {
          "type": "string"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "creator": {
          "$ref": "#/properties/PublicUserData"
        },
        "group": {
          "$ref": "#/properties/PublicGroupData"
        },
        "subject": {
          "$ref": "#/properties/PublicSubjectData"
        },
        "tags": {
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "FeedbackCreationRequest": {
      "required": [
        "message",
        "platform",
        "version"
      ],
      "type": "object",
      "properties": {
        "platform": {
          "maxLength": 20,
          "minLength": 0,
          "type": "string"
        },
        "version": {
          "maxLength": 20,
          "minLength": 0,
          "type": "string"
        },
        "message": {
          "maxLength": 500,
          "minLength": 0,
          "type": "string"
        }
      }
    },
    "TaskUpdateRequest": {
      "type": "object",
      "properties": {
        "description": {
          "maxLength": 500,
          "minLength": 0,
          "type": "string"
        },
        "tags": {
          "maxItems": 20,
          "minItems": 0,
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "PrivateGroupData": {
      "required": [
        "creationDate",
        "groupType",
        "id",
        "lastUpdated",
        "name",
        "users"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "groupType": {
          "type": "string",
          "enum": [
            "OPEN",
            "CLOSED"
          ]
        },
        "users": {
          "type": "array",
          "items": {
            "$ref": "#/properties/PublicUserData"
          }
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "GroupCreationRequest": {
      "required": [
        "groupName",
        "type"
      ],
      "type": "object",
      "properties": {
        "groupName": {
          "maxLength": 20,
          "minLength": 3,
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "OPEN",
            "CLOSED"
          ]
        }
      }
    },
    "PublicGroupDataWithoutMe": {
      "required": [
        "groupType",
        "id",
        "name",
        "userCount",
        "userCountWithoutMe"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "groupType": {
          "type": "string",
          "enum": [
            "OPEN",
            "CLOSED"
          ]
        },
        "userCount": {
          "type": "integer",
          "format": "int32"
        },
        "userCountWithoutMe": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "PublicInviteLinkData": {
      "required": [
        "id",
        "link"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "link": {
          "type": "string"
        }
      }
    },
    "GroupLevelRequest": {
      "required": [
        "permission"
      ],
      "type": "object",
      "properties": {
        "permission": {
          "type": "string",
          "enum": [
            "OWNER",
            "MODERATOR",
            "USER",
            "NULL"
          ]
        }
      }
    },
    "ImageBase64": {
      "required": [
        "data"
      ],
      "type": "object",
      "properties": {
        "data": {
          "type": "string"
        }
      }
    },
    "TaskCreationRequest": {
      "required": [
        "description",
        "tags"
      ],
      "type": "object",
      "properties": {
        "taskTitle": {
          "maxLength": 20,
          "minLength": 0,
          "type": "string"
        },
        "description": {
          "maxLength": 500,
          "minLength": 0,
          "type": "string"
        },
        "tags": {
          "maxItems": 20,
          "minItems": 0,
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "salt": {
          "maxLength": 32,
          "minLength": 32,
          "type": "string"
        }
      }
    },
    "PrivateSubjectData": {
      "required": [
        "group",
        "id",
        "manager",
        "name",
        "subscriberOnly",
        "subscribers"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "subscriberOnly": {
          "type": "boolean"
        },
        "group": {
          "$ref": "#/properties/PublicGroupData"
        },
        "manager": {
          "$ref": "#/properties/PublicUserData"
        },
        "subscribers": {
          "type": "array",
          "items": {
            "$ref": "#/properties/PublicUserData"
          }
        }
      }
    },
    "SubjectUpdateRequest": {
      "type": "object",
      "properties": {
        "name": {
          "maxLength": 20,
          "minLength": 2,
          "type": "string"
        },
        "subscriberOnly": {
          "type": "boolean"
        }
      }
    },
    "SubjectCreationRequest": {
      "required": [
        "name",
        "subscriberOnly"
      ],
      "type": "object",
      "properties": {
        "name": {
          "maxLength": 20,
          "minLength": 2,
          "type": "string"
        },
        "subscriberOnly": {
          "type": "boolean"
        }
      }
    },
    "PrivateUserData": {
      "required": [
        "displayName",
        "groups",
        "id",
        "permissions",
        "username"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "groups": {
          "type": "array",
          "items": {
            "$ref": "#/properties/PublicGroupData"
          }
        }
      }
    },
    "DisplayNameRequest": {
      "required": [
        "displayName"
      ],
      "type": "object",
      "properties": {
        "displayName": {
          "maxLength": 20,
          "minLength": 4,
          "type": "string"
        }
      }
    },
    "AlertSettings": {
      "required": [
        "alarmTime",
        "fridayEnabled",
        "mondayEnabled",
        "saturdayEnabled",
        "sundayEnabled",
        "thursdayEnabled",
        "tuesdayEnabled",
        "wednesdayEnabled"
      ],
      "type": "object",
      "properties": {
        "alarmTime": {
          "type": "string",
          "format": "time",
          "example": "07:00:00+01:00"
        },
        "mondayEnabled": {
          "type": "boolean"
        },
        "tuesdayEnabled": {
          "type": "boolean"
        },
        "wednesdayEnabled": {
          "type": "boolean"
        },
        "thursdayEnabled": {
          "type": "boolean"
        },
        "fridayEnabled": {
          "type": "boolean"
        },
        "saturdayEnabled": {
          "type": "boolean"
        },
        "sundayEnabled": {
          "type": "boolean"
        }
      }
    },
    "KretaSessionCreationRequest": {
      "required": [
        "url",
        "username"
      ],
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "PublicKretaSessionData": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "status": {
          "type": "string",
          "enum": [
            "LOADING",
            "ACTIVE",
            "ERROR",
            "AUTHENTICATION_REQUIRED",
            "INVALID_CREDENTIALS"
          ]
        },
        "username": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "KretaNote": {
      "required": [
        "content",
        "creationDate",
        "teacher",
        "title",
        "type"
      ],
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "teacher": {
          "type": "string"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "KretaSchedule": {
      "required": [
        "cancelled",
        "className",
        "date",
        "endOfClass",
        "periodNumber",
        "room",
        "standIn",
        "startOfClass",
        "subject",
        "teacher",
        "topic"
      ],
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "startOfClass": {
          "type": "string",
          "format": "time",
          "example": "07:00:00+01:00"
        },
        "endOfClass": {
          "type": "string",
          "format": "time",
          "example": "07:00:00+01:00"
        },
        "periodNumber": {
          "type": "integer",
          "format": "int32"
        },
        "cancelled": {
          "type": "boolean"
        },
        "standIn": {
          "type": "boolean"
        },
        "subject": {
          "type": "string"
        },
        "className": {
          "type": "string"
        },
        "teacher": {
          "type": "string"
        },
        "room": {
          "type": "string"
        },
        "topic": {
          "type": "string"
        },
        "homeworkId": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "KretaAverage": {
      "required": [
        "classGrade",
        "difference",
        "grade",
        "subject"
      ],
      "type": "object",
      "properties": {
        "subject": {
          "type": "string"
        },
        "grade": {
          "type": "number",
          "format": "double"
        },
        "classGrade": {
          "type": "number",
          "format": "double"
        },
        "difference": {
          "type": "number",
          "format": "double"
        }
      }
    },
    "KretaGrade": {
      "required": [
        "creationDate",
        "date",
        "grade",
        "gradeType",
        "subject",
        "topic",
        "weight"
      ],
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "subject": {
          "type": "string"
        },
        "topic": {
          "type": "string"
        },
        "gradeType": {
          "type": "string"
        },
        "grade": {
          "type": "string"
        },
        "weight": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "KretaHomework": {
      "required": [
        "content",
        "creationDate",
        "dueDate",
        "id",
        "subject",
        "teacher"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "subject": {
          "type": "string"
        },
